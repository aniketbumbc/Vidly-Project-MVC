@model  Vidly.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = Model.Title;
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @style = "color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReleaseDate, "", new { @style = "color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenreId)
        @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres, "GenreId", "GenreName"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GenreId, "", new { @style = "color:red" })
        
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumberStock)  
        @Html.TextBoxFor(m => m.NumberStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumberStock, "", new { @style = "color:red" })
    </div>
    
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}




@section scripts
 {
     @Scripts.Render("~/bundles/jqueryval")
 }
 